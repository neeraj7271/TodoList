<script>

var check = document.querySelectorAll(".checkbox");
var items = document.querySelectorAll(".items");
var clear = document.querySelector(".clear");
var newItems = document.querySelector(".newItems");


check.addEventListener("click", addItems);

function addItems() {
    for (var i = 0; i < items.length; i++) {

        if (check[i].checked === true) {
            items[i].classList.add("strike-through");
        }

        remove();
    }
}

function remove() {
    for (var i = 0; i < items.length; i++) {

        if (check[i].checked === false) {
            items[i].classList.remove("strike-through");
        }
    }
}




</script>
